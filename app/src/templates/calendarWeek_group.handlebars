<ul>

{{#elements}}

<li id="element-view-{{pk}}-{{cid}}">
    <section class="tablet-calendar">
        <table class="days-container">
            <tbody>
                <tr class="row week-row">
                    {{#days}}
                        <td class="cell">
                            <div>
                                <span class="date-value">{{date}}</span>
                                <em class="events-counter"></em>

                                <ul class="calendar-items"></ul>
                            </div>
                        </td>
                    {{/days}}
                </tr>
            </tbody>
        </table>

        <div class="overlay">
            <em>
                <span>{{#i18n}}Content loading{{/i18n}}</span><br />
                <img src="{{loaderUrl}}" />
            </em>
        </div>
    </section>
</li>

{{/elements}}

</ul>